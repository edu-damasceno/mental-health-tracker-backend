# Server Configuration
PORT=8080                    # Port number for the Express server
NODE_ENV=development        # Environment: development, production, or test

# Database
DATABASE_URL="file:./dev.db"  # SQLite database URL (required)

# Authentication
JWT_SECRET=your_jwt_secret_here  # Secret key for JWT tokens (required)
JWT_EXPIRES_IN=24h               # JWT token expiration time

# Security
RATE_LIMIT_WINDOW_MS=900000     # Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100     # Maximum requests per window

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173  # Comma-separated list of allowed origins

# WebSocket
WS_PORT=8080                    # WebSocket server port 